{
  "name": "play-nextjs",
  "version": "2.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4004",
    "build": "prisma generate && next build",
    "start": "next start -p 4004",
    "check:dotenv": "node scripts/run-with-env.js echo \"OPENAPI_SCHEMA_PATH: $OPENAPI_SCHEMA_PATH\" && echo \"OPENAPI_OUTPUT_PATH: $OPENAPI_OUTPUT_PATH\"",
    "types:gen": "node scripts/run-with-env.js types:gen",
    "types:watch": "node scripts/run-with-env.js types:watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.5.0",
    "@auth0/nextjs-auth0": "^4.9.0",
    "@prisma/client": "^5.11.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.0.1",
    "date-fns": "^3.4.0",
    "dotenv": "^17.2.2",
    "gray-matter": "^4.0.3",
    "jotai": "^2.14.0",
    "jsonwebtoken": "^9.0.2",
    "next": "15.3.0",
    "next-auth": "4.24.11",
    "next-themes": "^0.4.6",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.12",
    "openapi-fetch": "^0.14.0",
    "openapi-react-query": "^0.5.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.7.0",
    "prismjs": "^1.29.0",
    "qs": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.4.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "stripe": "^14.7.0",
    "tailgrids": "^2.2.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.27",
    "@types/nodemailer": "^6.4.14",
    "@types/prismjs": "^1.26.3",
    "@types/qs": "^6.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "autoprefixer": "^10.0.1",
    "chokidar-cli": "^3.0.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "openapi-typescript": "^7.9.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
